{
  "spark": {
    "log.level": "INFO",
    "checkpoint.dir": "hdfs:///griffin/batch/cp",
    "batch.interval": "10s",
    "config": {}
  },

  "persist": [
    {
      "type": "hdfs",
      "config": {
        "path": "hdfs:///griffin/streaming/persist",
        "max.persist.lines": 10000,
        "max.lines.per.file": 10000
      }
    },
    {
      "type": "http",
      "config": {
        "method": "post",
        "api": "http://HOSTNAME:9200/griffin/accuracy"
      }
    }
  ],

  "info.cache": [
    {
      "type": "zk",
      "config": {
        "hosts": "localhost:2181",
        "parent.path": "/griffin/cache",
        "mode": "persist",
        "init.clear": true,
        "close.clear": false,
        "lock.path": "lock"
      }
    }
  ],

  "cleaner": {

  }
}