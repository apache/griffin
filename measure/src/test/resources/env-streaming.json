{
  "spark": {
    "log.level": "WARN",
    "checkpoint.dir": "/test/griffin/cp",
    "batch.interval": "2s",
    "process.interval": "10s",
    "config": {}
  },

  "persist": [
    {
      "type": "log",
      "config": {
        "max.log.lines": 100
      }
    }
  ],

  "info.cache": [
    {
      "type": "zk",
      "config": {
        "hosts": "localhost:2181",
        "namespace": "griffin/infocache",
        "lock.path": "lock",
        "mode": "persist",
        "init.clear": true,
        "close.clear": false
      }
    }
  ],

  "cleaner": {
    "clean.interval": "2m"
  }
}