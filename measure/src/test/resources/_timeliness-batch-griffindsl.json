{
  "name": "timeliness_batch",

  "process.type": "batch",

  "data.sources": [
    {
      "name": "source",
      "connectors": [
        {
          "type": "avro",
          "version": "1.7",
          "config": {
            "file.name": "src/test/resources/timeliness_data.avro"
          }
        }
      ]
    }
  ],

  "evaluate.rule": {
    "rules": [
      {
        "dsl.type": "griffin-dsl",
        "dq.type": "timeliness",
        "name": "timeliness",
        "rule": "ts, end_ts",
        "details": {
          "source": "source",
          "latency": "latency",
          "threshold": "3m",
          "step": "step",
          "count": "cnt",
          "step.size": "2m"
        },
        "metric": {
          "name": "timeliness"
        },
        "record": {
          "name": "lateRecords"
        }
      }
    ]
  }
}