{
  "spark": {
    "log.level": "WARN",
    "checkpoint.dir": "hdfs:///griffin/batch/cp",
    "batch.interval": "10s",
    "process.interval": "10m",
    "config": {
      "spark.master": "local[*]",
      "hive.metastore.uris": "thrift://localhost:9083"
    },
    "init.clear": true
  },

  "persist": [
    {
      "type": "log",
      "config": {
        "max.log.lines": 10
      }
    }
  ],

  "info.cache": [
    {
      "type": "zk",
      "config": {
        "hosts": "localhost:2181",
        "namespace": "griffin/infocache",
        "lock.path": "lock",
        "mode": "persist",
        "init.clear": true,
        "close.clear": false
      }
    }
  ],

  "cleaner": {

  }
}