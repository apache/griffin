{
  "spark": {
    "log.level": "WARN",
    "checkpoint.dir": "hdfs:///griffin/batch/cp",
    "batch.interval": "10s",
    "process.interval": "10m",
    "config": {
      "spark.master": "local[*]"
    }
  },

  "persist": [
    {
      "type": "log",
      "config": {
        "max.log.lines": 100
      }
    },
    {
      "type": "hdfs",
      "config": {
        "path": "hdfs://localhost/griffin/test/persist",
        "max.persist.lines": 10000,
        "max.lines.per.file": 10000
      }
    }
  ],

  "info.cache": [
    {
      "type": "zk",
      "config": {
        "hosts": "localhost:2181",
        "namespace": "griffin/infocache",
        "lock.path": "lock",
        "mode": "persist",
        "init.clear": true,
        "close.clear": false
      }
    }
  ],

  "cleaner": {

  }
}